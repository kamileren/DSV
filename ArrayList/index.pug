doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title ArrayList Visualization
    link(rel="stylesheet" href="style.css")
  body
    div#array-list-app
      input#element-input(type="text" placeholder="Enter element")
      input#index-input(type="number" placeholder="Index (for addAt/set)")
      button#add-btn Add
      button#add-at-btn Add At
      button#remove-btn Remove Last
      button#remove-at-btn Remove Element
      button#set-btn Set Element
      div#array-display
    script(src="ArrayList.js")
    script(src="script.js")
